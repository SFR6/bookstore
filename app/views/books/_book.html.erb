<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= book.price %>
  </p>

  <p>
    <strong>Author:</strong>
    <% author = Author.find_by(author_id: book.author_id) %>
    <%= author.name if author %>
  </p>

  <p>
    <strong>Genre:</strong>
    <% genre = Genre.find_by(genre_id: book.genre_id) %>
    <%= genre.genre_name if genre %>
  </p>

</div>
