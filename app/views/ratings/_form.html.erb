    <%= form.label :comments, style: "display: block" %>
    <%= form.text_area :comments, class: "form-control", style: "width: 200px;" %>
  </div>

  <div>
    <%= form.label :number_of_stars, style: "display: block" %>
    <%= form.text_field :number_of_stars, class: "form-control", style: "width: 200px;" %>
  </div>

  <br>
  <div class="form-group">
    <%= form.submit class: "btn btn-success"%>
  </div>
